/* pages/checkIn/checkIn.wxss */
page {
  height: 100%; 
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  overflow-x: hidden;
}

.Attendance_method{
  color: #4BBFE6;
  font-size: 30px;
  margin-top: 40rpx;
}

.UserInfo{
  display: flex;
  flex-direction: row;
}
.info{
  display: flex;
  flex-direction: column;
  margin-top: 150rpx;
}
.head{
  height: 180rpx;
  width: 180rpx;
  margin-top: 150rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow:hidden;
}
.name{
  font-size: 50rpx;
  font-weight: 600;
}
.position{
  font-size: 35rpx;
  font-weight: 400;
  margin-top: 10rpx;
}
.apartment{
  font-size: 35rpx;
  font-weight: 400;
  margin-top: 10rpx;
}

.current_time{
  margin-top: 150rpx;
  font-size: 90rpx;
  font-weight: 500;
}

.checkin_button{
  height: 150rpx;
  margin-top: 150rpx;
}

.Info{
  margin-top: 30rpx;
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.history_box{
  margin-bottom: 50rpx;
}
.History{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* background: white; */
}
.image{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.judge_icon{
  height: 40rpx;
}
.text{
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  border: 1px solid #4BBFE6;
  color: #4BBFE6;
  font-size: 25rpx;
  padding: 15rpx;
  width: 600rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.BussinessText{
  position: fixed;
  bottom: 5%;
  color: #4BBFE6;
  font-size: 30rpx;
  font-weight: 400;
}
