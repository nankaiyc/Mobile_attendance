/* pages/camera/camera.wxss */
.preview-tips {
  margin: 20rpx 0;  
}
.camera{
  position: fixed;
  z-index: -1;
}
.border{
  display: flex;
  flex-direction: column-reverse;
  border: 1px solid gainsboro;
  width:70%;
  margin-left: 15%;
  height: 60%;
  margin-top: 30%;
  }
.text{
  display: flex;
  align-items: center;
  justify-content: center;
  color: gainsboro;
}

.btn-area{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.take_photo{
  position: fixed;
  bottom: 0;
  height: 120rpx;
}
