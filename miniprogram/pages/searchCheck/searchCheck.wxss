/* pages/searchCheck/searchCheck.wxss */
.form {
  display: flex;
  flex-direction: column;
}

.name {
  display: flex;
  flex-direction: row;
  margin: 20rpx 10rpx;
}

.name-input {
  border-bottom: 1px solid #4BBFE6;
}

.department {
  display: flex;
  flex-direction: row;
  margin: 20rpx 10rpx;
}

.department-picker {
  font-weight: bolder;
}

.date {
  display: flex;
  flex-direction: row;
  margin: 20rpx 10rpx;
}

.date-picker {
  margin: auto 10rpx;
  font-weight: bolder;
}

.submit {
  background: #4BBFE6;
  color: white;
  width: 95%;
  font-weight: 500;
  margin: 20rpx;
}

.time_tab_content{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.messageList{
  margin-bottom: 5rpx;
  border-bottom: 1px solid gainsboro;
  background: white;
  margin-bottom: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.default_user{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}
.user_icon{
  margin-left: 10rpx;
  height: 70rpx;
} 
.Name{
  margin-left: 20rpx;
  font-size: 40rpx;
  font-weight: 800;
}
.Company{
  margin-left: 20rpx;
  font-size: 35rpx;
  font-weight: 500;
}
.message{
  margin-left: 95rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 5rpx;
}