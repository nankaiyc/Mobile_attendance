/* pages/superVise/superVise.wxss */
.First_Tab {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.time_tab,.month_tab{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid gainsboro;
}
.direction_icon_left{
  height: 70rpx;
  margin-left: 22%;
}
.direction_icon_right{
  height: 70rpx;
  margin-right: 22%;
}
.date_content,.month_content{
  font-size: 30rpx;
  font-weight: 400;
}
.time_tab_content{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-bottom: 1px solid gainsboro;
}
.default_user{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}
.user_icon{
  margin-left: 10rpx;
  height: 70rpx;
} 
.Name{
  margin-left: 20rpx;
  font-size: 40rpx;
  font-weight: 800;
}
.Company{
  margin-left: 20rpx;
  font-size: 35rpx;
  font-weight: 500;
}
.message{
  margin-left: 95rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 5rpx;
}
.nocheckin_message{
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 100rpx;
}
.Third_Tab{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}

.content1-1{
  font-size: 15px;
}
.content1-2{
  margin-top: 40px;
}
.content2-1{
  margin-top: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content2-2{
  margin-top: 15px;
  font-size: 10px;
}
.content2-3{
  margin-top: 1px;
  font-size: 10px;
}

.month_body {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.month_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 30rpx 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.person_info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 200rpx;
}

.month_person_img {
  width: 80rpx;
  margin-bottom: 10rpx;
}

.month_person_name {
  font-size: medium;
  font-weight: 520;
}

.month_person_dept {
  font-size: x-small;
  color: grey;
}

.month_item_ls {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.month_item_ls_item {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.month_item_ls_block {
  width: 20rpx;
  height: 20rpx;
  border-radius: 5rpx;
  margin-right: 10rpx;
  background: yellow;
}

.month_item_ls_text {
  font-size: small;
  color: gray;
}